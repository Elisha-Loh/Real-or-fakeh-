{
  "manifest_version": 3,
  "name": "For Real Meh?",
  "version": "1.0.0",
  "description": "Highlight text on any page and get a sourced fact-check in a side panel.",
  "permissions": [
    "contextMenus",
    "sidePanel",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open For Real Meh?"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
